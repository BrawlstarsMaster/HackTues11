const express = require("express");
const { Pool } = require("pg");

const app = express();
const pool = new Pool({
  user: "your_user",
  host: "localhost",
  database: "porthealth",
  password: "your_password",
  port: 5432,
});

app.use(express.json());

app.post("/save-doctor-form", async (req, res) => {
  try {
    const {
      patientId,
      diagnosis,
      prescriptions,
      needFollowUp,
      followUpDate,
      recoveryNotes,
      visitCost,
      preparations,
    } = req.body;

    const result = await pool.query(
      `INSERT INTO medical_history (user_id, history, created_at)
       VALUES ($1, $2, NOW()) RETURNING id`,
      [patientId, diagnosis]
    );

    const visitId = result.rows[0].id;

    if (prescriptions.length > 0) {
      const prescriptionQueries = prescriptions.map((presc) => {
        return pool.query(
          `INSERT INTO prescriptions (user_id, medication, instructions, prescribed_at)
           VALUES ($1, $2, $3, NOW())`,
          [patientId, presc.medicine, `${presc.dosage}, ${presc.frequency}, ${presc.duration}`]
        );
      });
      await Promise.all(prescriptionQueries);
    }

    res.status(201).json({ message: "Visit summary saved!" });
  } catch (error) {
    console.error("Error saving visit summary:", error);
    res.status(500).json({ error: "Error saving visit summary" });
  }
});

const PORT = process.env.PORT || 5000;
app.listen(PORT, () => {
  console.log(`Server running on port ${PORT}`);
});
