const { Chat } = require('../models'); // Ensure Chat model exists

// Get chat messages between two users
exports.getMessages = async (req, res) => {
  try {
    const userId = req.user.id; // From authentication middleware
    const recipientId = req.params.userId;

    const messages = await Chat.findAll({
      where: {
        sender_id: [userId, recipientId],
        receiver_id: [userId, recipientId],
      },
      order: [['createdAt', 'ASC']],
    });

    res.status(200).json(messages);
  } catch (error) {
    console.error('Error fetching messages:', error);
    res.status(500).json({ error: 'Server error' });
  }
};

// Send a chat message
exports.sendMessage = async (req, res) => {
  try {
    const { receiverId, message } = req.body;
    const senderId = req.user.id; // From authentication middleware

    if (!receiverId || !message) {
      return res.status(400).json({ error: 'Missing receiverId or message' });
    }

    const newMessage = await Chat.create({
      sender_id: senderId,
      receiver_id: receiverId,
      message: message,
    });

    res.status(201).json(newMessage);
  } catch (error) {
    console.error('Error sending message:', error);
    res.status(500).json({ error: 'Server error' });
  }
};
